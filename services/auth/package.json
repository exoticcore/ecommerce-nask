{
  "name": "auth-express",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p . && tsc-alias",
    "start": "node dist/server.js",
    "dev": "dotenv -e .env -- nodemon",
    "typeorm:generate": "npx typeorm-ts-node-esm migration:generate -d src/config/typeorm.config.ts src/migrate/test",
    "typeorm:migrate": "npx typeorm-ts-node-esm migration:run -d src/config/typeorm.config.ts",
    "typeorm:gen:mig": "yarn typeorm:generate && yarn typeorm:migrate",
    "test": "yarn db:test:restart && dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest unit --watch",
    "test:unit": "dotenv -e .env.test -- jest unit",
    "test:int": "dotenv -e .env.test -- jest int",
    "test:e2e": "yarn db:test:restart && dotenv -e .env.test -- jest e2e",
    "db:test:rm": "docker compose -f docker-compose-test.yaml rm -s -f -v",
    "db:test:up": "docker compose -f docker-compose-test.yaml up -d",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && dotenv -e .env.test -- yarn typeorm:generate && dotenv -e .env.test -- yarn typeorm:migrate",
    "db:dev:rm": "docker compose rm -s -v -f",
    "db:dev:up": "docker compose up -d",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && dotenv -e .env.dev -- yarn typeorm:generate &&dotenv -e .env.dev -- yarn typeorm:migrate"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.13",
    "argon2": "^0.40.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.4.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "0.3.20",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/argon2": "^0.15.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.5",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yaml": "^1.9.7",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "mail-listener5": "^2.1.2",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
